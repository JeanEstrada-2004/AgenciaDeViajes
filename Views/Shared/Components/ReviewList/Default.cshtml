@model List<AgenciaDeViajes.Models.Review>

<div class="reviews-list mt-4">
    @if (Model == null || !Model.Any())
    {
        <p class="text-muted">No hay comentarios aún. ¡Sé el primero en opinar!</p>
    }
    else
    {
        <div class="row g-3">
            @foreach (var review in Model)
            {
                <div class="col-12 border rounded p-3 shadow-sm bg-white">
                    <div class="row align-items-center">
                        <div class="col-md-3 text-center text-md-start mb-3 mb-md-0">
                            <strong class="d-block mb-1">Usuario Anónimo</strong>
                            <div class="d-flex justify-content-center justify-content-md-start align-items-center">
                                <span class="me-2">Promedio estrellas:</span>
                                <span class="badge bg-warning text-dark fs-6 px-3 py-2 rounded">
                                    @( (review.CalificacionAtencion + review.CalificacionCalidad + review.CalificacionPuntualidad) / 3.0 ).ToString("0.0")
                                </span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <p class="mb-0 fst-italic text-secondary">@review.Comentario</p>
                        </div>

                        <div class="col-md-3 text-center">
                            @if (review.Sentimiento == "Positivo")
                            {
                                <span class="text-success fs-1">&#128522;</span>
                                <p>Gracias, que bueno que te haya gustado</p>
                            }
                            else if (review.Sentimiento == "Negativo")
                            {
                                <span class="text-danger fs-1">&#128577;</span>
                                <p>Ups, lo siento, haremos lo posible por mejorar</p>
                            }
                            else
                            {
                                <span class="text-secondary fs-1">&#128528;</span>
                                <p>Gracias por tu opinión</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
