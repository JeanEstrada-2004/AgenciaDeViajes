@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Panel de Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body { background: #f7fafd; }
        .sidebar {
            min-height: 100vh;
            background: #1a237e;
            color: #fff;
            padding: 0;
        }
        .sidebar .nav-link {
            color: #bfc8ea;
            font-weight: 500;
            transition: background 0.2s, color 0.2s;
        }
        .sidebar .nav-link.active,
        .sidebar .nav-link:hover {
            background: #3949ab;
            color: #fff;
        }
        .sidebar .nav-link i {
            margin-right: 8px;
        }
        .sidebar .user-header {
            padding: 32px 0 16px 0;
            text-align: center;
            background: #283593;
        }
        .sidebar .user-header img {
            border-radius: 50%;
            width: 64px;
            height: 64px;
            margin-bottom: 12px;
            border: 2px solid #fff;
        }
        .sidebar .user-header h6 {
            margin: 0;
            font-size: 1.05rem;
        }
        .main-content {
            background: #f7fafd;
            min-height: 100vh;
        }
        @@media (max-width: 991.98px) {
            .sidebar { min-height: auto; }
        }
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-lg-2 col-md-3 sidebar py-0">
            <div class="user-header">
                <img src="https://arequipaturismo.com/cloud/user.jpg" alt="User" />
                <h6>
                    ¡Bienvenido,<br/>
                    @((ViewBag.NombreCompleto as string) ?? "Usuario")
                    !
                </h6>
            </div>
            <ul class="nav flex-column px-3">
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Active == "Dashboard" ? "active" : "")" href="/PanelUsuario/Dashboard"><i class="bi bi-house-door"></i>Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Active == "MisReservas" ? "active" : "")" href="/PanelUsuario/MisReservas"><i class="bi bi-calendar-check"></i>Mis reservas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Active == "Perfil" ? "active" : "")" href="/PanelUsuario/Perfil"><i class="bi bi-person"></i>Mi perfil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Active == "Soporte" ? "active" : "")" href="/PanelUsuario/Soporte"><i class="bi bi-question-circle"></i>Soporte</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Active == "Notificaciones" ? "active" : "")" href="/PanelUsuario/Notificaciones"><i class="bi bi-bell"></i>Notificaciones</a>
                </li>
                <li class="nav-item mt-2">
                    <a class="nav-link text-danger" href="/Login/Logout"><i class="bi bi-box-arrow-right"></i>Cerrar sesión</a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="col-lg-10 col-md-9 ms-sm-auto px-4 py-4 main-content">
            @RenderBody()
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
