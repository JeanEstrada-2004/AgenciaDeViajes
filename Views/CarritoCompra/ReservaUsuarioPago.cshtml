@model AgenciaDeViajes.Models.ReservaCarritoViewModel
@using Microsoft.AspNetCore.Antiforgery
@{
    ViewBag.Title = "Reservar destino - Usuario y Pago";
    Layout = "_Layout";
    var isAuthenticated = User?.Identity != null && User.Identity.IsAuthenticated;
    var totalAdultos = Model.CantidadAdultos;
    var totalNinos = Model.CantidadNinos;
    var precio = Model.PrecioTour;
    var totalAdultosMonto = totalAdultos * precio;
    var totalNinosMonto = totalNinos * precio;
    var total = totalAdultosMonto + totalNinosMonto;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8">
            <h3 class="mb-4">¡Finaliza tu compra!</h3>
            @if (!isAuthenticated)
            {
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="mb-3">Para continuar, inicia sesión o regístrate</h5>
                        <a class="btn btn-primary me-2"
                           href="/Login?returnUrl=/CarritoCompra/ReservaUsuarioPago">Iniciar sesión</a>
                        <a class="btn btn-outline-success"
                           href="/Registro/Registrar?returnUrl=/CarritoCompra/ReservaUsuarioPago">Registrarse</a>
                    </div>
                </div>
            }
            else
            {
                <h4 class="mb-3">Selecciona el método de pago</h4>
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Formulario solo para el token antiforgery -->
                        <form id="mercadoPagoForm">
                            @Html.AntiForgeryToken()
                        </form>
                        <button type="button" id="btnMercadoPago" class="btn btn-primary w-100 mt-2">
                            Realizar pago con MercadoPago
                        </button>
                        <div id="mp-loader" style="display:none;">
                            <span>Cargando MercadoPago...</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Resumen de reserva -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center bg-light">
                    <strong>Resumen de reserva</strong>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-2">Fecha de reserva: <span>@DateTime.Now.ToString("dd/MM/yyyy")</span></p>
                    <img src="@Model.DestinoImagenUrl" class="img-fluid mb-2 rounded" alt="Destino">
                    <h5 class="mb-1">@Model.DestinoNombre</h5>
                    <p class="mb-1"><span class="badge bg-info">@Model.DestinoDuracion</span></p>
                    <p class="mb-1"><strong>Fecha elegida:</strong> @Model.FechaElegida</p>
                    <div class="mb-2">
                        <strong>Pasajeros:</strong>
                        <ul class="mb-0">
                            <li>Adultos: @totalAdultos x S/ @precio = <strong>S/ @totalAdultosMonto</strong></li>
                            <li>Niños: @totalNinos x S/ @precio = <strong>S/ @totalNinosMonto</strong></li>
                        </ul>
                    </div>
                    <div class="mb-2">
                        <strong>Servicios adicionales:</strong>
                        <ul class="mb-0">
                            @if (Model.ServiciosAdicionales != null && Model.ServiciosAdicionales.Any())
                            {
                                foreach (var servicio in Model.ServiciosAdicionales)
                                {
                                    <li>@servicio</li>
                                }
                            }
                            else
                            {
                                <li>No seleccionados</li>
                            }
                        </ul>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span><strong>Total</strong></span>
                        <span class="fs-5 fw-bold">S/ @total</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var btnPago = document.getElementById('btnMercadoPago');
        var loader = document.getElementById('mp-loader');
        var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');

        if (btnPago) {
            btnPago.addEventListener('click', function () {
                btnPago.disabled = true;
                loader.style.display = 'block';

                fetch('/CarritoCompra/CrearPreferencia', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': tokenInput ? tokenInput.value : ''
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.init_point) {
                        window.location.href = data.init_point;
                    } else {
                        alert('No se pudo generar el pago. Intente nuevamente.');
                    }
                });
            });
        }
    });
</script>
}

