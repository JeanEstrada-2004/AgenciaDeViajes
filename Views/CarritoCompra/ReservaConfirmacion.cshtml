@{
    ViewBag.Title = "Reserva confirmada";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="alert alert-success py-5">
                <i class="fas fa-check-circle fa-3x mb-4"></i>
                <h2>¡Reserva confirmada!</h2>
                <p class="lead mb-3">
                    Tu compra ha sido registrada con éxito.<br>
                    En breve recibirás un correo con los detalles.<br>
                    <span class="badge bg-info">Pago realizado con MercadoPago</span>
                </p>
                <hr>
                <h4 class="mt-4 mb-3">Resumen de tu pago</h4>
                <ul class="list-group mb-3 text-start">
                    <li class="list-group-item">ID de pago MercadoPago: <strong>@ViewBag.CollectionId</strong></li>
                    <li class="list-group-item">Estado del pago: <strong>@ViewBag.Status</strong></li>
                    <li class="list-group-item">ID de transacción: <strong>@ViewBag.PaymentId</strong></li>
                    <li class="list-group-item">ID de preferencia: <strong>@ViewBag.PreferenceId</strong></li>
                </ul>
                <a href="/" class="btn btn-primary mt-4 px-4">Volver al inicio</a>
            </div>
        </div>
    </div>
</div>
