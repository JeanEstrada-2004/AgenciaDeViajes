@model AgenciaDeViajes.Models.ReservaCarritoViewModel
@{
    ViewBag.Title = "Datos de Pasajeros - Reserva";
    Layout = "_Layout";
    var totalAdultos = Model.CantidadAdultos;
    var totalNinos = Model.CantidadNinos;
    var precio = Model.PrecioTour;
    var totalAdultosMonto = totalAdultos * precio;
    var totalNinosMonto = totalNinos * precio;
    var total = totalAdultosMonto + totalNinosMonto;
}

<div class="container py-5">
    <div class="row">
        <!-- Bloques de pasajeros -->
        <div class="col-md-8">
            <h3 class="mb-4">Datos de los pasajeros</h3>
            <form asp-action="ReservaUsuarioPago" asp-controller="CarritoCompra" method="post">
                @for (int i = 1; i <= totalAdultos; i++)
                {
                    <div class="card mb-3">
                        <div class="card-header bg-primary text-white">
                            Adulto @i
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nombre completo</label>
                                <input type="text" class="form-control" name="Pasajeros[@(i-1)].NombreCompleto" placeholder="Ingrese nombre completo" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Documento identidad</label>
                                <input type="text" class="form-control" name="Pasajeros[@(i-1)].Documento" placeholder="DNI/Pasaporte" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Teléfono</label>
                                <input type="text" class="form-control" name="Pasajeros[@(i-1)].Telefono" placeholder="Celular" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">País de residencia</label>
                                <input type="text" class="form-control" name="Pasajeros[@(i-1)].Pais" placeholder="País" required>
                            </div>
                            <input type="hidden" name="Pasajeros[@(i-1)].Tipo" value="Adulto" />
                        </div>
                    </div>
                }

                @for (int j = 1; j <= totalNinos; j++)
                {
                    var index = totalAdultos + (j-1);
                    <div class="card mb-3">
                        <div class="card-header bg-info text-white">
                            Niño @j
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nombre completo</label>
                                <input type="text" class="form-control" name="Pasajeros[@index].NombreCompleto" placeholder="Ingrese nombre completo" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Documento identidad</label>
                                <input type="text" class="form-control" name="Pasajeros[@index].Documento" placeholder="DNI/Pasaporte" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Teléfono</label>
                                <input type="text" class="form-control" name="Pasajeros[@index].Telefono" placeholder="Celular" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">País de residencia</label>
                                <input type="text" class="form-control" name="Pasajeros[@index].Pais" placeholder="País" required>
                            </div>
                            <input type="hidden" name="Pasajeros[@index].Tipo" value="Niño" />
                        </div>
                    </div>
                }

                <button type="submit" class="btn btn-primary mt-3 px-5">Siguiente</button>
            </form>
        </div>

        <!-- Resumen de la reserva -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center bg-light">
                    <strong>Resumen de reserva</strong>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-2">Fecha de reserva: <span>@DateTime.Now.ToString("dd/MM/yyyy")</span></p>
                    <img src="@Model.DestinoImagenUrl" class="img-fluid mb-2 rounded" alt="Destino">
                    <h5 class="mb-1">@Model.DestinoNombre</h5>
                    <p class="mb-1"><span class="badge bg-info">@Model.DestinoDuracion</span></p>
                    <p class="mb-1"><strong>Fecha elegida:</strong> @Model.FechaElegida</p>
                    <div class="mb-2">
                        <strong>Pasajeros:</strong>
                        <ul class="mb-0">
                            <li>Adultos: @totalAdultos x S/ @precio = <strong>S/ @totalAdultosMonto</strong></li>
                            <li>Niños: @totalNinos x S/ @precio = <strong>S/ @totalNinosMonto</strong></li>
                        </ul>
                    </div>
                    <div class="mb-2">
                        <strong>Servicios adicionales:</strong>
                        <ul class="mb-0">
                            @if (Model.ServiciosAdicionales != null && Model.ServiciosAdicionales.Any())
                            {
                                foreach (var servicio in Model.ServiciosAdicionales)
                                {
                                    <li>@servicio</li>
                                }
                            }
                            else
                            {
                                <li>No seleccionados</li>
                            }
                        </ul>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span><strong>Total</strong></span>
                        <span class="fs-5 fw-bold">S/ @total</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
