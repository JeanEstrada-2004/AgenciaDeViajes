@model AgenciaDeViajes.Models.Destino
@{
    ViewData["Title"] = "Agregar Destino";
    var regiones = ViewBag.Regiones as List<AgenciaDeViajes.Models.Region>;
}

<h2>Agregar Nuevo Destino</h2>

<form asp-action="CreateDestino" method="post">
    <div class="form-group">
        <label>Nombre del destino:</label>
        <input asp-for="nom_destino" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Descripción:</label>
        <textarea asp-for="desc_destino" class="form-control" rows="3" required></textarea>
    </div>

    <div class="form-group">
        <label>Precio (S/.):</label>
        <input asp-for="precio_tour" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="form-group">
        <label>Número de entradas:</label>
        <input asp-for="num_entradas" class="form-control" type="number" required />
    </div>

    <div class="form-group">
        <label>Duración (ej. 2 días, 4 horas):</label>
        <input asp-for="time_tour" class="form-control" />
    </div>

    <div class="form-group">
        <label>Imagen (URL):</label>
        <input asp-for="ImgDest_url" class="form-control" />
    </div>

    <div class="form-group">
        <label>Región:</label>
        <select asp-for="id_region" class="form-control" asp-items="@(new SelectList(regiones, "id_region", "desc_region"))">
            <option value="">Seleccione una región</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar Destino</button>
</form>
