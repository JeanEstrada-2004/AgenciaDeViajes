@{
    ViewBag.Title = "Soporte";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
    ViewBag.Active = "Soporte";
}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold mb-3"><i class="bi bi-question-circle"></i> Soporte</h2>
            <p class="text-muted">¿Tienes alguna duda o inconveniente? Envíanos tu mensaje.</p>
        </div>
    </div>
    <div class="card shadow-sm border-0 p-4 mx-auto" style="max-width:600px;">
        <form>
            <div class="mb-3">
                <label class="form-label">Asunto</label>
                <input type="text" class="form-control" placeholder="Ej: Consulta sobre mi reserva">
            </div>
            <div class="mb-3">
                <label class="form-label">Mensaje</label>
                <textarea class="form-control" rows="4" placeholder="Describe tu consulta o problema"></textarea>
            </div>
            <button type="submit" class="btn btn-primary w-100">Enviar mensaje</button>
        </form>
    </div>
</div>
