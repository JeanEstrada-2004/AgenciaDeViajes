@{
    ViewBag.Title = "Mi Perfil";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
    ViewBag.Active = "Perfil";
}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold mb-3"><i class="bi bi-person"></i> Mi perfil</h2>
        </div>
    </div>
    <div class="card shadow-sm border-0 p-4 mx-auto" style="max-width:600px;">
        <div class="mb-4 text-center">
            <img src="https://arequipaturismo.com/cloud/user.jpg" class="rounded-circle mb-3" width="80" alt="Foto perfil">
            <h5 class="mb-0">Pamela Cardenas</h5>
            <span class="text-muted small">pamela@gmail.com</span>
        </div>
        <form>
            <div class="mb-3">
                <label class="form-label">Nombre completo</label>
                <input type="text" class="form-control" value="Pamela Cardenas">
            </div>
            <div class="mb-3">
                <label class="form-label">Teléfono</label>
                <input type="tel" class="form-control" value="986654321">
            </div>
            <div class="mb-3">
                <label class="form-label">Documento</label>
                <input type="text" class="form-control" value="DNI 47123456">
            </div>
            <div class="mb-3">
                <label class="form-label">Nueva contraseña</label>
                <input type="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary w-100">Actualizar perfil</button>
        </form>
    </div>
</div>
